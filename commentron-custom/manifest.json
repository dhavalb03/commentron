{
  "manifest_version": 3,
  "name": "Custom CommenTron - LinkedIn AI Assistant",
  "version": "2.0.0",
  "description": "AI-powered LinkedIn comment generator with your own Gemini API",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "notifications"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Custom CommenTron"
  }
}